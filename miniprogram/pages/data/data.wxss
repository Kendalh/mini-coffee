.mp-data__hero {
  padding: 28rpx;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.16) 0%, rgba(16, 174, 255, 0.14) 100%);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.mp-data__heroTitle {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.mp-data__heroMeta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
}

.mp-filter {
  border-radius: 16rpx;
  overflow: hidden;
}

.mp-bean__title {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.mp-bean__name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-right: 12rpx;
}

.mp-bean__sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
}

.mp-dot {
  margin: 0 10rpx;
  opacity: 0.6;
}

.mp-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  line-height: 1.3;
  margin-right: 8rpx;
}

.mp-tag--premium {
  background: rgba(16, 174, 255, 0.14);
  color: #10aeff;
}

.mp-tag--common {
  background: rgba(87, 107, 149, 0.12);
  color: #576b95;
}

.mp-tag--instock {
  background: rgba(7, 193, 96, 0.12);
  color: #07c160;
}

.mp-tag--soldout {
  background: rgba(250, 81, 81, 0.12);
  color: #fa5151;
}

.mp-bean__ft {
  padding-left: 12rpx;
}

.mp-bean__price {
  font-size: 24rpx;
  color: #576b95;
}

.mp-pagination {
  margin-top: 24rpx;
  padding: 20rpx;
}

.mp-pagination__row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.mp-pagination__info {
  font-size: 24rpx;
  color: #888;
}

.mp-pagination__pages {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.mp-pagination__pageBtn {
  margin: 0;
}
