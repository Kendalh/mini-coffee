.mp-cart {
  padding-bottom: 260rpx;
}

.mp-cart__hero {
  padding: 28rpx;
  background: linear-gradient(135deg, rgba(87, 107, 149, 0.14) 0%, rgba(16, 174, 255, 0.12) 100%);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.mp-cart__title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.mp-cart__subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
}

.mp-cart__empty {
  margin-top: 24rpx;
  padding: 28rpx;
}

.mp-cart__emptyTitle {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.mp-cart__emptyDesc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #888;
}

.mp-cart__emptyActions {
  margin-top: 10rpx;
}

.mp-cart__emptyActions .weui-btn {
  margin-top: 16rpx;
}

.mp-cart__footbar {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(env(safe-area-inset-bottom) + 110rpx);
  padding: 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.86);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  backdrop-filter: blur(20px);
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 18rpx 60rpx rgba(0, 0, 0, 0.14);
}

.mp-cart__totalLabel {
  font-size: 22rpx;
  color: #888;
}

.mp-cart__totalValue {
  margin-top: 2rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #07c160;
}

.mp-cart__checkoutBtn {
  flex: 1;
  margin: 0;
}
