.mp-detail {
  padding-bottom: 220rpx;
}

.mp-detail__hero {
  padding: 28rpx;
  background: linear-gradient(135deg, rgba(16, 174, 255, 0.14) 0%, rgba(7, 193, 96, 0.14) 100%);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.mp-detail__name {
  font-size: 40rpx;
  font-weight: 800;
  color: #1f1f1f;
}

.mp-detail__meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #576b95;
}

.mp-detail__priceRow {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
}

.mp-detail__price {
  font-size: 36rpx;
  font-weight: 800;
  color: #07c160;
  margin-right: 8rpx;
}

.mp-dot {
  margin: 0 10rpx;
  opacity: 0.6;
}

.mp-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  line-height: 1.3;
}

.mp-tag--premium {
  background: rgba(16, 174, 255, 0.14);
  color: #10aeff;
}

.mp-tag--common {
  background: rgba(87, 107, 149, 0.12);
  color: #576b95;
}

.mp-tag--instock {
  background: rgba(7, 193, 96, 0.12);
  color: #07c160;
}

.mp-tag--soldout {
  background: rgba(250, 81, 81, 0.12);
  color: #fa5151;
}

.mp-detail__cells {
  border-radius: 16rpx;
  overflow: hidden;
}

.mp-detail__bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 16rpx);
  background: rgba(247, 247, 247, 0.92);
  backdrop-filter: blur(18px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.mp-detail__primaryBtn {
  margin: 0;
}

.mp-detail__secondaryBtn {
  margin-top: 16rpx;
}

.mp-detail__msg {
  padding-top: 120rpx;
}
