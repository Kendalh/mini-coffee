.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.detail-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.label {
  font-weight: bold;
  width: 200rpx;
  flex-shrink: 0;
  color: #666;
}

.value {
  flex: 1;
  color: #333;
}

.loading, .error {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

.error {
  color: #ff4d4f;
}

/* Price Trends Table */
.price-trends-section {
  width: 100%;
  background-color: #fff;
  padding: 0;
  margin: 1rpx 0 1rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  padding: 20rpx 20rpx 10rpx;
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.table-container {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 0;
  overflow: hidden;
  box-sizing: border-box;
}

.table-header {
  display: flex;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #ddd;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell, .header-cell {
  flex: 1;
  padding: 25rpx 5rpx;
  text-align: center;
  font-size: 28rpx;
}

.header-cell {
  font-weight: bold;
  color: #333;
  background-color: #f8f8f8;
}

.table-cell {
  color: #666;
}