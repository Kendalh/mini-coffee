/**profile.wxss**/
.mp-profile__hero {
  padding: 28rpx;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.14) 0%, rgba(87, 107, 149, 0.12) 100%);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
}

.mp-profile__heroRow {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mp-profile__avatarBtn {
  padding: 0;
  background: transparent;
  border: none;
  outline: none;
  box-shadow: none;
}

.mp-profile__avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.10);
  background: #fff;
}

.mp-profile__heroText {
  flex: 1;
}

.mp-profile__heroTitle {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.mp-profile__heroDesc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888;
}

.mp-profile__form {
  margin-top: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.mp-profile__fieldLabel {
  font-size: 26rpx;
  color: #576b95;
  width: 96rpx;
}

.mp-profile__cells {
  border-radius: 16rpx;
  overflow: hidden;
}

.mp-profile__motto {
  padding: 24rpx 28rpx;
}

.mp-profile__mottoText {
  font-size: 26rpx;
  color: #576b95;
}
