/**profile.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 20rpx;
  border: 1rpx solid #ccc;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  background-color: transparent;
  border: none;
  outline: none;
  box-shadow: none;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 20rpx;
  border: 1rpx solid #ccc;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.nickname-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.nickname-input {
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  width: 300rpx;
  text-align: center;
}