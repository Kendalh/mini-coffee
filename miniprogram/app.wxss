/**app.wxss**/
@import "./weui.wxss";

page {
  background: #f7f7f7;
  color: #1f1f1f;
  font-family: "PingFang SC";
}

/* Legacy wrapper: keep name but make it WeUI-friendly */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 24rpx;
}

/* Common page scaffolding (opt-in) */
.mp-page {
  min-height: 100vh;
  box-sizing: border-box;
}

.mp-page__bd {
  padding: 24rpx;
}

.mp-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.mp-card + .mp-card {
  margin-top: 24rpx;
}
